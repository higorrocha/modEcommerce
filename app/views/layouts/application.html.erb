<!DOCTYPE html>
<html>
<head>
  <title>ModEcommerce</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%if signed_in?%>
          <li>
            <%= link_to cart_path, class:"button" do%>
              My Cart
              (<span><%=current_user.cart_count%></span>)
            <%end%>
          </li>
          <li><%=link_to current_user.email, edit_user_registration_path, class: "button"%></li>
          <li><%=link_to "Logout", destroy_user_session_path, method: :delete, class: "button"%></li>
        <%else%>
    <%end%>
	<%= yield %>

</body>
</html>
